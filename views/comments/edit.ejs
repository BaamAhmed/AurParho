<%- include ("../partials/header") %>
<div class="container">
	<div class="row">
		<h1 style="text-align: center; padding-bottom: 25px">
			Update comment on <%= foundCampground.name %>
		</h1>
		<div style="width: 30%; margin: 0 auto;">
			<form action="/campgrounds/<%= campground_id %>/comments/<%=foundComment._id%>" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" value="<%=foundComment.text%>" name="comment[text]">
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-md btn-block">Submit!</button>
				</div>
			</form>
			<a href="/campgrounds">View All Campgrounds</a>
		</div>
		
	</div>
</div>

<%- include ("../partials/footer") %>