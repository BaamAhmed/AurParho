                            <option value="PakGeo">Pakistan Geography</option>
                            <option value="PakHis">Pakistan History</option>
                            <option value="CompSci">Computer Science</option>
                            <option value="Biology">Biology</option>
                            <option value="Psych">Psychology</option>
                            <option value="Socio">Sociology</option>
                        </select>
        <input type="submit" value="SUBMIT" style="text-align: center;" class="mainSearchButton">
    </form>

</div>

