<%- include ("../partials/header") %>
<div class="container">
	<div class="row">
		<h1 style="text-align: center; padding-bottom: 25px">
			Edit <%=note.title%>
		</h1>
		<div style="width: 30%; margin: 0 auto;">
			<form action="/notes/<%= note._id%>/edit" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" placeholder="title" name="note[title]" value="<%=note.title%>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="image url" name="note[image]" value="<%= note.image %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="grade" name="note[grade]" value="<%=note.grade%>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="note[noteLink]" value="<%=note.noteLink%>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="note[subject]" value="<%=note.subject%>">
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-md btn-block">Submit!</button>
				</div>
			</form>
			<a href="/notes">View All Notes</a>
		</div>
		
	</div>
</div>

<%- include ("../partials/footer") %>